	<insert id="insert" parameterType="noticeboardvo" >
	<![CDATA[
		insert into bd_noti values(seq_bd_noti.nextval, '43', #{title }, #{content }, sysdate, '0')
	
	]]>
	</insert>

	
	<select id="getAll" resultType="noticeboardvo">
	<![CDATA[
		select no, user_no as userNo, title, content, reg_date as regDate, view_count as viewCount  from bd_noti
	]]>
	</select>
	
	<select id="view" parameterType="java.lang.Integer" resultType="noticeboardvo">
	<![CDATA[
		select b.no, b.user_no as userNo, u.name as userName, b.title, b.content, b.reg_date as regDate, b.view_count as viewCount  
    	from bd_noti b, users u 
    	where b.no = #{no }
    	and b.USER_NO = u.NO
    ]]>
	</select>
	
	
	<!--  파일저장 -->
	<insert id="insertFileNoti" parameterType="kr.ac.sungkyul.beautyline.vo.FileNotiVo">
	
	<![CDATA[
		insert into f_noti values (seq_f_noti.nextVal, #{noticeNo }, #{orgName }, #{path }, #{saveName } )
		]]>
	
	</insert>
	
	
	
	
	
